.top_nav
  .nav_menu
    %nav{ role: 'navigation' }
      .nav.toggle
        %a#menu_toggle
          %i.fa.fa-bars
      %ul.nav.navbar-nav.navbar-right
        %li
          %a.user-profile.dropdown-toggle{ 'aria-expanded' => 'false', 'data-toggle' => 'dropdown', href: 'javascript:;' }
            = current_user.name
            %span.fa.fa-angle-down
          %ul.dropdown-menu.dropdown-usermenu.pull-right
            %li
              = link_to edit_user_registration_url do
                = fa_icon('edit', class: 'pull-right')
                = t('user.labels.edit_profile')
            %li
              = link_to destroy_user_session_url, method: :delete do
                = fa_icon('sign-out', class: 'pull-right')
                = t('devise.labels.sign_out')
