- content_for :title, t('push.template.labels.management')

.row
  .col-md-12.col-sm-12.col-xs-12.toolbar
    .x_panel
      .x_title
        %h2= t('common.labels.toolbar')
        %ul.nav.navbar-right.panel_toolbox
          %li
            %a.collapse-link= fa_icon('chevron-up')
        .clearfix
      .x_content
        = link_to new_admin_push_template_url, class: 'btn btn-app btn-sm' do
          = fa_icon('plus')
          = t('push.template.labels.new')
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2= t('push.template.titles.list')
        %ul.nav.navbar-right.panel_toolbox
          %li
            %a.collapse-link= fa_icon('chevron-up')
        .clearfix
      .x_content
        %table.table.table-bordered.dt-responsive.nowrap
          %thead
            %tr
              %th= Pcloud::Template.human_attribute_name(:identity)
              %th= Pcloud::Template.human_attribute_name(:title_en)
              %th= Pcloud::Template.human_attribute_name(:content_en)
              %th
          %tbody
            - @templates.each do |template|
              %tr
                %td= template.identity
                %td= template.title_en
                %td.break_line= template.content_en
                %td
                  = link_to admin_push_template_url(template.identity), class: 'btn btn-primary btn-xs' do
                    = fa_icon('pencil')
                    = t('common.labels.view')
