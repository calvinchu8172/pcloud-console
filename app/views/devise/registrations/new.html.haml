- content_for :title, t('user.titles.super_admin_sign_up')

= simple_form_for resource, as: resource_name, url: super_admin_sign_up_url do |f|
  = f.input :email, label: false, wrapper_html: { class: 'has-feedback' } do
    = f.input_field :email, placeholder: User.human_attribute_name(:email), autofocus: true, class: 'form-control has-feedback-left'
    %span.fa.fa-envelope-o.form-control-feedback.left
  = f.input :password, label: false, wrapper_html: { class: 'has-feedback' } do
    = f.input_field :password, placeholder: User.human_attribute_name(:password), autocomplete: 'off', class: 'form-control has-feedback-left'
    %span.fa.fa-key.form-control-feedback.left
  = f.input :password_confirmation, label: false, wrapper_html: { class: 'has-feedback' } do
    = f.input_field :password_confirmation, placeholder: User.human_attribute_name(:password_confirmation), autocomplete: 'off', class: 'form-control has-feedback-left'
    %span.fa.fa-key.form-control-feedback.left
  .form-group
    = f.button :submit, t('common.labels.submit'), class: 'btn-block btn-success'
