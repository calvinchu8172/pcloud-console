.row
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2= t('user.titles.new')
        %ul.nav.navbar-right.panel_toolbox
          %li
            %a.collapse-link= fa_icon('chevron-up')
        .clearfix
      .x_content
        = simple_form_for resource, as: resource_name, url: users_creation_url, method: :post, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
          = f.input :email, wrapper_html: { class: 'has-feedback' }, input_wrapper_html: { class: 'col-sm-4' }, required: true do
            = f.input_field :email, autofocus: true, class: 'form-control has-feedback-left'
            %span.fa.fa-envelope-o.form-control-feedback.left
          = f.input :group_ids, collection: Group.select_options, input_html: { multiple: true }, input_wrapper_html: { class: 'col-sm-5' }
          .ln_solid
          .form-group
            .col-sm-6.col-xs-12.col-md-offset-3
              = f.button :submit, t('common.labels.submit'), class: 'btn-success'
              = link_to t('common.labels.cancel'), admin_users_url, class: 'btn btn-default'
